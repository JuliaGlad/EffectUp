<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackers_navigation"
    app:startDestination="@id/trackersFragment">

    <fragment
        android:id="@+id/trackersFragment"
        android:name="myapplication.android.mindall.presentation.plans.trackers.TrackersFragment"
        android:label="fragment_trackers"
        tools:layout="@layout/fragment_trackers">
        <action
            android:id="@+id/action_trackersFragment_to_moodTrackersFragment"
            app:destination="@id/moodTrackersFragment"
            app:enterAnim="@anim/slide_in_fast_anim"
            app:exitAnim="@anim/slide_out_fast_anim"
            app:popEnterAnim="@anim/slide_in_fast_anim"
            app:popExitAnim="@anim/slide_out_fast_anim"/>
        <action
            android:id="@+id/action_trackersFragment_to_nightFragment"
            app:destination="@id/nightFragment"
            app:enterAnim="@anim/slide_in_fast_anim"
            app:exitAnim="@anim/slide_out_fast_anim"
            app:popEnterAnim="@anim/slide_in_fast_anim"
            app:popExitAnim="@anim/slide_out_fast_anim" />
        <action
            android:id="@+id/action_trackersFragment_to_chooseHabitFragment"
            app:destination="@id/chooseHabitFragment"
            app:enterAnim="@anim/slide_in_fast_anim"
            app:exitAnim="@anim/slide_out_fast_anim"
            app:popEnterAnim="@anim/slide_in_fast_anim"
            app:popExitAnim="@anim/slide_out_fast_anim"/>
    </fragment>
    <fragment
        android:id="@+id/moodTrackersFragment"
        android:name="myapplication.android.mindall.presentation.plans.trackers.moodTrackers.MoodTrackersFragment"
        android:label="fragment_mood_trackers"
        tools:layout="@layout/fragment_mood_trackers" />
    <fragment
        android:id="@+id/nightFragment"
        android:name="myapplication.android.mindall.presentation.plans.trackers.nightTrackers.NightFragment"
        android:label="fragment_night"
        tools:layout="@layout/fragment_night" />
    <fragment
        android:id="@+id/chooseHabitFragment"
        android:name="myapplication.android.mindall.presentation.plans.trackers.habiitTrackers.chooseHabit.ChooseHabitFragment"
        android:label="fragment_choose_habit"
        tools:layout="@layout/fragment_choose_habit">
        <action
            android:id="@+id/action_chooseHabitFragment_to_habitTrackersFragment"
            app:destination="@id/habitTrackersFragment"
            app:enterAnim="@anim/slide_in_fast_anim"
            app:exitAnim="@anim/slide_out_fast_anim"
            app:popEnterAnim="@anim/slide_in_fast_anim"
            app:popExitAnim="@anim/slide_out_fast_anim"/>
    </fragment>
    <fragment
        android:id="@+id/habitTrackersFragment"
        android:name="myapplication.android.mindall.presentation.plans.trackers.habiitTrackers.main.HabitTrackersFragment"
        android:label="fragment_habit_trackers"
        tools:layout="@layout/fragment_habit_trackers">
        <action
            android:id="@+id/action_habitTrackersFragment_to_chooseHabitFragment"
            app:destination="@id/chooseHabitFragment"
            app:enterAnim="@anim/slide_in_fast_anim"
            app:exitAnim="@anim/slide_out_fast_anim"
            app:popEnterAnim="@anim/slide_in_fast_anim"
            app:popExitAnim="@anim/slide_out_fast_anim"/>
    </fragment>
</navigation>